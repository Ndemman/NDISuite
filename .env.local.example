# NDISuite Report Writer Environment Configuration Example
# Copy this file to .env.local and modify as needed

# Feature Flags
NEXT_PUBLIC_USE_ENHANCED_AUDIO_RECORDER=true
NEXT_PUBLIC_RESILIENT_TRANSCRIPTION=true

# API Keys
NEXT_PUBLIC_OPENAI_API_KEY=your_openai_api_key_here

# Transcription Service
NEXT_PUBLIC_TRANSCRIPTION_WS_URL=wss://api.ndisuite.com/transcription

# Development Settings
# Set to true to enable detailed logging for audio recording troubleshooting
NEXT_PUBLIC_AUDIO_DEBUG=false
